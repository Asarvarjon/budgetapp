<%- include("./parts/header.ejs") %>  
<% var error %> 

<section>
    <div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
        <h2>Sign up</h2>
        <% if(error) { %> 
            <div class="alert my-2 alert-danger">
                <%= error %> 
            </div>
        <% } %> 
        <form  method="POST" action="/signup"  class=" mt-2">

            <input type="email" placeholder="Email" class="form-control form-control-lg mt-2" name="email">
            <input type="password" placeholder="Password" class="form-control form-control-lg mt-2" name="password">

            <button class="btn btn-large w-100 mt-2 btn-primary">
                Sign up
            </button>

            <a href="/" class="btn btn-outline-success mt-2 w-100">Login</a>

        </form>
    </div>
</section>




<%- include("./parts/footer.ejs") %> 